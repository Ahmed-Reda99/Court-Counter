<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8cc"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Team A"
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="#ff9800"
                android:onClick="addThreePointsToTeamA"
                android:text="+3 points"
                android:textSize="17sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp"
                android:background="#ff9800"
                android:onClick="addTwoPointsToTeamA"
                android:text="+2 points"
                android:textSize="17sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp"
                android:background="#ff9800"
                android:onClick="addOnePointToTeamA"
                android:text="free throw"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="#e68c4d"
            android:layout_marginTop="80dp"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Team B"
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/teamBScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginTop="15dp"
                android:background="#ff9800"
                android:onClick="addThreePointsToTeamB"
                android:text="+3 points"
                android:textSize="17sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp"
                android:background="#ff9800"
                android:onClick="addTwoPointsToTeamB"
                android:text="+2 points"
                android:textSize="17sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp"
                android:background="#ff9800"
                android:onClick="addOnePointToTeamB"
                android:text="free throw"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#ff9800"
            android:onClick="reset"
            android:text="reset"
            android:textSize="17sp"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</LinearLayout>